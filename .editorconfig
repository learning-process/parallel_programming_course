root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{cpp,h,hpp,c}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[{CMakeLists.txt,*.cmake}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
